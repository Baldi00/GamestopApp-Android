<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleHeader"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/no_info"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/add"
                android:onClick="addToList"
                android:layout_width="39dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_gravity="end"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimary"
                android:scaleType="fitCenter"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:src="@drawable/ic_add_circle_outline_black_70dp" />

            <ImageButton
                android:id="@+id/remove"
                android:onClick="removeFromList"
                android:layout_width="39dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_gravity="end"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimary"
                android:scaleType="fitCenter"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:src="@drawable/ic_remove_circle_outline_black_70dp" />

            <ImageButton
                android:id="@+id/more"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:layout_gravity="end"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimary"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_more_vert_black_70dp"
                android:onClick="showMoreOptionsMenu"/>

        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wholePage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:src="@drawable/no_image"
                android:adjustViewBounds="true"
                android:padding="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/redGamestop"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:text="@string/newPrice"/>

                    <TextView
                        android:id="@+id/newPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text=""/>

                    <TextView
                        android:id="@+id/oldNewPrice"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/redGamestop"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text="@string/usedPrice"/>

                    <TextView
                        android:id="@+id/usedPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text=""/>

                    <TextView
                        android:id="@+id/oldUsedPrice"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/game_page_info_background"
                    android:paddingTop="30dp"
                    android:paddingBottom="10dp"
                    android:text="@string/info"
                    android:textColor="#000"
                    android:textSize="21dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/game_page_info_background"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/no_info"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/game_page_info_background"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/publisher"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/publisher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/no_info"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/game_page_info_background"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/platform"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/platform"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/no_info"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/game_page_info_background"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/genres"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/genres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/no_info"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/game_page_info_background"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/releaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/no_info"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/game_page_info_background"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/players"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/players"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/no_info"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pegi"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="21dp"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="60dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/pegi18"
                        android:visibility="gone"
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/pegi18" />

                    <ImageView
                        android:id="@+id/pegi16"
                        android:visibility="gone"
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/pegi16" />

                    <ImageView
                        android:id="@+id/pegi12"
                        android:visibility="gone"
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/pegi12" />

                    <ImageView
                        android:id="@+id/pegi7"
                        android:visibility="gone"
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/pegi7" />

                    <ImageView
                        android:id="@+id/pegi3"
                        android:visibility="gone"
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/pegi3" />

                    <ImageView
                        android:id="@+id/pegiBadLanguage"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/bad_language"
                        android:adjustViewBounds="true"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:id="@+id/pegiDiscrimination"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/discrimination"
                        android:adjustViewBounds="true"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:id="@+id/pegiDrugs"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/drugs" />

                    <ImageView
                        android:id="@+id/pegiFear"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/fear"
                        android:adjustViewBounds="true"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:id="@+id/pegiGambling"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/gambling"
                        android:adjustViewBounds="true"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:id="@+id/pegiSex"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/sex"
                        android:adjustViewBounds="true"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:id="@+id/pegiViolence"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/violence"
                        android:adjustViewBounds="true"
                        android:layout_marginRight="5dp"/>


                    <ImageView
                        android:id="@+id/pegiOnline"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/online"
                        android:adjustViewBounds="true"
                        android:layout_marginRight="5dp"/>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gallery"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="21dp"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <!--<ImageView
                        android:id="@+id/gallery1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_image_gallery"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="10dp"
                        android:onClick="enlargeImage"/>

                    <ImageView
                        android:id="@+id/gallery2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_image_gallery"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:id="@+id/gallery3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_image_gallery"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:id="@+id/gallery4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_image_gallery"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:id="@+id/gallery5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_image_gallery"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:id="@+id/gallery6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_image_gallery"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:id="@+id/gallery7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_image_gallery"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:id="@+id/gallery8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_image_gallery"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:id="@+id/gallery9"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_image_gallery"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:id="@+id/gallery10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_image_gallery"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>-->

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="21dp"
                android:background="@drawable/game_page_info_background"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/description"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:textSize="17dp"
                />

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/progressBarOnDownlaod"/>

</LinearLayout>